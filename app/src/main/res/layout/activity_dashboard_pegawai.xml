<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="#D7FAF1"
    tools:context=".DashboardPegawaiActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.SearchView
            android:id="@+id/searchView"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:queryHint="Cari kegiatan..."
            android:background="@android:color/white"
            android:elevation="4dp"
            android:iconifiedByDefault="false"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="3dp"
            android:paddingBottom="1dp">

            <!---UPTD-->
            <Button
                android:id="@+id/btnUPTD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UPTD"
                android:backgroundTint="#FFFFFF"
                android:layout_marginStart="22dp"
                android:textColor="#246455"
                android:textSize="16dp"
                android:textStyle="bold" />

            <!---PPA -->
            <Button
                android:id="@+id/btnPPA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PPA"
                android:backgroundTint="#FFFFFF"
                android:layout_marginLeft="40dp"

                android:textColor="#246455"
                android:textSize="16dp"
                android:textStyle="bold" />

            <!---PP -->
            <Button
                android:id="@+id/btnPP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PP"
                android:backgroundTint="#FFFFFF"
                android:layout_marginLeft="40dp"
                android:textColor="#246455"
                android:textSize="16dp"
                android:textStyle="bold" />

            <!---PUG -->
            <Button
                android:id="@+id/btnPUG"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PUG"
                android:backgroundTint="#FFFFFF"
                android:layout_marginLeft="40dp"
                android:textColor="#246455"
                android:textSize="16dp"
                android:textStyle="bold" />

            <!---KB -->
            <Button
                android:id="@+id/btnKB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="KB"
                android:backgroundTint="#FFFFFF"
                android:layout_marginLeft="40dp"
                android:textColor="#246455"
                android:textSize="16dp"
                android:textStyle="bold" />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingTop="8dp"
            tools:listitem="@layout/item_kegiatan" />
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
